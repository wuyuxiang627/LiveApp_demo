<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_main_top_tab">

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="29dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_tab_live"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_main_tab_left_selector"
                android:enabled="false"
                android:gravity="center"
                android:text="直播"
                android:textColor="@color/bg_main_tab_text_selector" />

            <TextView
                android:id="@+id/btn_tab_upload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_main_tab_middle_selector"
                android:gravity="center"
                android:text="点播"
                android:textColor="@color/bg_main_tab_text_selector" />

            <TextView
                android:id="@+id/btn_tab_short_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_main_tab_right_selector"
                android:gravity="center"
                android:text="短视频"
                android:textColor="@color/bg_main_tab_text_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_login_out"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="退出"
            android:textColor="@color/color_btn_main"
            android:textSize="17sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>