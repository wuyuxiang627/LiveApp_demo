<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textures_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="67dp"
    android:visibility="gone"
    tools:showIn="@layout/short_video_edit_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/empty_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@color/color_grey_1affffff"
            android:gravity="center">

            <ImageView
                android:id="@+id/empty_view"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/empty" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kiss_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:background="@color/color_grey_1affffff"
            android:gravity="center">

            <ImageView
                android:id="@+id/kiss_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/small_kiss" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/knife_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:background="@color/color_grey_1affffff"
            android:gravity="center">

            <ImageView
                android:id="@+id/knife_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/knife" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grimace_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:background="@color/color_grey_1affffff"
            android:gravity="center">

            <ImageView
                android:id="@+id/grimace_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/grimace" />
        </RelativeLayout>

    </LinearLayout>

    <!-- 显示时间的layout -->
    <include layout="@layout/showtime_layout" />

</RelativeLayout>