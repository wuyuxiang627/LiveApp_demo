<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- 直播 -->
    <style name="MediaController_Text">
        <item name="android:textColor">#7fffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/group_small_text_color</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_content" parent="text_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_title_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">6dp</item>
    </style>


    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_content</item>
        <item name="android:theme">@style/theme_radio_button</item>
    </style>

    <style name="theme_radio_button" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/radio_btn</item>
    </style>

    <style name="seek_bar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="btn_switch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- session -->
    <string name="input_panel_guess">猜 拳</string>

    <style name="control_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="video_info_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_enter_bg_select</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="video_delete_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_delete_btn_selector</item>
        <item name="android:textColor">@drawable/btn_enter_text_select</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="music_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/mix_music_btn_bg_select</item>
    </style>

    <style name="quality_select_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="share_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@drawable/share_type_text_selector</item>
        <item name="android:background">@drawable/share_type_bg_selector</item>
    </style>

    <style name="InputActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_activity_blue_bg</item>
        <item name="colorPrimaryDark">@color/color_activity_blue_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
    </style>

    <style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
    </style>

    <style name="video_info_sub_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/bg_video_detail_sub_title</item>
    </style>

    <style name="video_detail_divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/video_detail_divide_line</item>
    </style>

    <style name="edit_text_url_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:background">@drawable/bg_text_input</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_hint_color_999999</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
